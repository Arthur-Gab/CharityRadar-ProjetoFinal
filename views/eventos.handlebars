<!DOCTYPE html>
<html lang="en">

<head>
    <title>Eventos</title>
</head>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <!-- logo -->
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img id="logo1" src="/img/logo.png" class="img-fluid" alt="Logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Barra de navegação -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul id="navbarItems" class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li id="nav-link1" class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Pagina Inicial</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/#sobreId">sobre</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/listaEventos">Eventos</a>
                    </li>

                    <li class="nav-item">
                        <a id="nav-linkblue" class="nav-link accAcess">{{logadoounao}}</a>

                        <a id="nav-linkblue2" class="nav-link accAcess2 hide" data-bs-toggle="offcanvas"
                            data-bs-target="#offcanvasRight" aria-controls="offcanvasRight"
                            href="#offcanvasExample">{{logadoounao}}</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<body>

    <div class="container-fluid vh-100 overflow-auto">
        <div class="row-fluid">


            <div class="row text-start overflow-auto bg-light">

                <div class="row my-1">
                    <h2 class="text-center text-dark"> Eventos </h2>
                </div>
                <div class="row mx-auto">
                    <div class="container my-1 d-flex justify-content-center">

                        <form action="/eventos" method="post">
                            <div class="d-inline-block col-10">
                                <select name="tipo" class="mx-auto form-select w-100" id="">
                                    <option value="todos" selected>Todos</option>
                                    <option value="unico">Únicos</option>
                                    <option value="frequente">Frequentes</option>
                                </select>
                            </div>
                            <div class="d-inline-block mx-auto col-1">
                                <button type="submit" class="btn">
                                    <h2><i class="bi bi-search"></i></h2>
                                </button>
                            </div>
                        </form>

                    </div>
                </div>



                <!-- CARDS EVENTOS -->

                <div class="row mx-auto">
                    {{#each eventos}}
                    <div class="col-md-4 col-sm-6 my-2 ">
                        <div class="card text-center">
                            <div style="min-height: 200px;" class="card-body">
                                <h5 class="card-title">{{name}}</h5>
                                <strong>{{data}} - {{hora}}</strong>
                                <p class="card-text">{{endereco}}</p>
                                <form action="/modalEventos/{{id}}" method="get">
                                    <button type="submit" class="btn btn-outline-primary">Abrir Evento</button>
                                </form>
                            </div>
                        </div>
                    </div>


                    {{else}}
                    <div class="container">
                        <div class="row">
                            <figure class="text-center mt-5">
                                <img class=" h-75 d-inline-block img-fluid" src="/img/foldernoEvents.png" alt="">
                            </figure>





                        </div>
                    </div>


                    {{/each}}


                </div>

            </div>




        </div>


    </div>








</body>

</html>