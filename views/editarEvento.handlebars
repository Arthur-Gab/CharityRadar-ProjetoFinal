    <section id="mainContentCev">
        <h1>Editar Evento</h1>
        <form action="/cadastrouEvento" method='post' enctype="multipart/form-data">
            <div id="formPlace">
                <div id="formEv">
                    <div class="divInputs input-group mb-3">
                        <input type="text" name='nome' class="form-control inputClass" placeholder="Nome do evento">
                        <input type="text" name='numero' class="form-control inputClass"
                            placeholder="Número para contato (Opicional)">
                    </div>
                    <div class="divSelects input-group mb-3">
                        <select name='tipo' class="form-select inputClass">
                            <option selected>Selecione o tipo de evento</option>
                            <option value="unico">Unico</option>
                            <option value="frequente">Frequente</option>
                        </select>
                        <select name='cidade' class="form-select inputClass">
                            <option selected>Selecione a Cidade</option>
                            <option value="unico">Belo Horizonte</option>
                        </select>
                    </div>
                    <div class="divInputs input-group mb-3">
                        <input name='rua' type="text" class="form-control inputClass"
                            placeholder="Endereço do evento (Rua)">
                        <input type="text" name='bairro' id="bairroEnd" class="inputClass" placeholder="Bairro">
                        <input type="text" name='numerorua' id="numEnd" class="inputClass" placeholder="Número">
                    </div>
                    <div id="divAnexo" class="input-group mb-3">
                        <div class="mb-3">
                            <label for="formFile" class="form-label">Foto de capa do seu evento</label>
                            <input class="form-control inputClass" type="file" id="formFile">
                        </div>
                        <div class="mb-3">
                            <label for="formFileMultiple" class="form-label">Fotos para seu evento anúncio</label>
                            <input class="form-control inputClass" type="file" id="formFileMultiple" multiple>
                        </div>
                    </div>

                    <div id="inputDesc" class="input-group">
                        <span class="input-group-text">Descrição do evento</span>
                        <textarea name='descricao' id="" class="form-control inputClass"></textarea>
                    </div>
                    <div id="buttonCev">
                        <button type="button" class="btnCev btn btn-outline-primary">Salvar Alterações</button>
                    </div>
                </div>

            </div>
        </form>
