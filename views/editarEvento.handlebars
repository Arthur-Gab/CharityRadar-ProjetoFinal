            <a class="navbar-brand" href="/">
                <img id="logo1" src="/img/logo.png" class="img-fluid" alt="Logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Barra de navegação -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul id="navbarItems" class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li id="nav-link1" class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Pagina Inicial</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/#sobreId">sobre</a>
